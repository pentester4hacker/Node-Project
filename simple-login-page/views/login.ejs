<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        
        body {
            background-color: #000;
            background-image: url(images/background_login.jpg);
            width: 100%;
            height: 100vh;
            animation: backgroundAnimation 20s infinite alternate;
            color: #73C6CA;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        @keyframes backgroundAnimation {
            0% { background-position: 0% 50%; }
            100% { background-position: 100% 50%; }
        }

        .login-container {
            background-color: rgba(255, 218, 185, 0.5); 
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
            width: 600px; 
            text-align: center;
            position: relative; 
        }

        .input-group {
            margin-bottom: 20px;
        }

        label {
            color: #fff;
        }

        input[type="text"],
        input[type="password"] {
            width: 100%;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }

        button[type="submit"] {
            background-color: #091242;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        button[type="submit"]:hover {
            background-color: #073a63;
        }

        .signup-link {
            color: #73C6CA; 
            transition: transform 0.3s;
        }

        .signup-link:hover {
            transform: translateY(-2px);
        }

        .signup-link::after {
            content: '';
            position: absolute;
            bottom: -2px;
            left: 0;
            width: 100%;
            height: 2px;
            background-color: #73C6CA; 
            transform: scaleX(0);
            transition: transform 0.3s;
            transform-origin: bottom right;
        }

        .signup-link:hover::after {
            transform: scaleX(1);
            transform-origin: bottom left;
        }

        /* Error message box */
        .error-message {
            position: absolute;
            top: 10px;
            left: 50%;
            transform: translateX(-50%);
            background-color: #ffdab9; 
            color: #000; 
            padding: 10px 20px;
            border-radius: 5px;
            animation: fadeOut 3s ease; 
            z-index: 999; 
            display: none; 
        }

        /* Animation to fade out */
        @keyframes fadeOut {
            0% { opacity: 1; }
            100% { opacity: 0; }
        }
    </style>
</head>
<body>
    <div class="login-container">
        <h2>Login</h2>
        <form id="loginForm" action="/login" method="POST">
            <div class="input-group">
                <label for="username">Username:</label>
                <input type="text" id="username" name="username" title="Only alphanumeric characters are allowed" required>
            </div>
            <div class="input-group">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" title="Only valid characters are allowed" required>
            </div>
            <button type="submit">Login</button>
        </form>
        <p>Don't have an account? <a href="/signup" class="signup-link">Sign up</a> now!</p>
        <!-- Error message box -->
        <div id="errorMessage" class="error-message"></div>
    </div>

    <!-- Include Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      // Handle form submission
const loginForm = document.getElementById('loginForm');
    loginForm.addEventListener('submit', async (event) => {
    event.preventDefault(); // Prevent default form submission
    // const username = document.getElementById('username').value;
    // const password = document.getElementById('password').value;

    // Create request body
    const formData = new FormData(loginForm);
    const formBody = new URLSearchParams(formData).toString();
    // formData.append('username', username);
    // formData.append('password', password);

    // Send form data to server using fetch API
    try {
        const response = await fetch('/login', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded'
            },
            body: formBody
        }); 
        if (!response.ok) {
            throw new Error('Network response was not ok');
        }
        const data = await response.text(); // Parse response body as text
        if (data.includes('Incorrect username or password.')) {
            displayErrorMessage('Incorrect username or password.'); // Display error message if login fails
        } else {
            window.location.href = '/dashboard'; // Redirect to dashboard on successful login
        }
    } catch (error) {
        console.error('Error:', error);
        displayErrorMessage('An unexpected error occurred. Please try again.'); // Display generic error message
    }
});

// Function to display error message
const displayErrorMessage = (message) => {
    const errorMessage = document.getElementById('errorMessage');
    errorMessage.innerText = message;
    errorMessage.style.display = 'block'; // Show the message box
    setTimeout(() => {
        errorMessage.style.display = 'none'; // Hide the message box after 3 seconds
    }, 8000);
};

    </script>
</body>
</html>
